<%= simple_form_for([@account, @accounting_period, @bank_fee], :remote => true) do |f| %>
  <%#= f.error_notification %>

  <% if @bank_fee.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@bank_fee.errors.count, "error") %> prohibited this account from being saved:</h2>

      <ul>
      <% @bank_fee.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-inputs">
    <%= f.input :date, :as => :ui_date_picker %>
    <%= f.input :bank_account, collection: ['Checking Account', 'Other Account'] %>
    <%= f.input :description %>
    <%= f.input :amount %>
     <%= f.input :notes, :as => :text %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>




<script>


$(function() {
  $('input.ui-date-picker').datepicker(
   {
      changeMonth: true,
      changeYear: true
   }

  );
  var dateValue = $( "input#bank_deposit_date" ).val();
  
  $( "input#bank_deposit_date" ).datepicker( "option", "dateFormat", "yy-mm-dd" );
  $( "input#bank_deposit_date" ).datepicker( "setDate", dateValue );
});


</script>
